<%- include('./../header') %>

<div class="contain">
  <div id="map"></div>
</div>

<style>
   #map {
        height: 400px;
        width: 500px;
        margin: 0 auto;
   }
</style>
<script>
  function initMap() {
    var uluru = {lat:34.157551, lng: -118.487565};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 8,
      center: uluru
    });

    var contentString = 
    '<div id="content">'+
        '<p>16255 Ventura Blvd Suite 450 Encino, CA 91436</p>'+
    '</div>';

    var infowindow = new google.maps.InfoWindow({
        content: contentString
    });

    var marker = new google.maps.Marker({
      position: uluru,
      map: map,
      title: 'Bauman Law Group'
    });
    
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <form action="/confirmation" method="POST">
                    <h4 class="text-center" id="modal">Reach us right hereâ€¦</h4>
                    <div class="input-with-icon col-sm-12">
                        <i class="icon-MaleFemale"></i>
                        <input class="validate-required" type="text" name="name" placeholder="Your Name">
                    </div>
                    <div class="input-with-icon col-sm-6">
                        <i class="icon-Address-Book"></i>
                        <input class="validate-required validate-email" type="email" name="email" placeholder="Email Address">
                    </div>
                    <div class="input-with-icon col-sm-6">
                        <i class="icon-Phone-2"></i>
                        <input type="tel" name="telephone" placeholder="Phone Number">
                    </div>
                    <div class="input-with-icon col-sm-12">
                        <i class="icon-Mail"></i>
                        <input type="text" name="message" placeholder="Message" rows="8">
                        <!-- <input class="validate-required" name="message" placeholder="Your Message" rows="8"></textarea> -->
                    </div>
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn--primary vpe">
                            Submit
                        </button>
                    </div>
                </form> 
            </div>
        </div>
    </div>
</section>

<script src="https://maps.googleapis.com/maps/api/js?key=<%=key%>&libraries=places&callback=initMap" async defer></script>

