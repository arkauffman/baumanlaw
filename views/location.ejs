    <script>
      function initMap() {
        var uluru = {lat:34.157551, lng: -118.487565};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 8,
          center: uluru
        });

        var contentString = 
        '<div id="content">'+
            '<p>16255 Ventura Blvd Suite 450 Encino, CA 91436</p>'+
        '</div>';

        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
          position: uluru,
          map: map,
          title: 'Bauman Law Group'
        });
        
        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      }
    </script>
   <script src="https://maps.googleapis.com/maps/api/js?key=<%=key%>&libraries=places&callback=initMap" async defer></script>

